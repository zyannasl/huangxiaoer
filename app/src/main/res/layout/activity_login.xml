<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="134pt"
        android:scaleType="fitXY"
        android:src="@mipmap/jianbian"/>

    <ImageView
        android:layout_width="87pt"
        android:layout_height="87pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40pt"
        android:src="@mipmap/tubiao" />

    <ImageView
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_marginTop="157pt"
        android:layout_marginLeft="31pt"
        android:src="@mipmap/user_icon" />

    <EditText
        android:id="@+id/login_iphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157pt"
        android:layout_marginLeft="77pt"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:hint="请输入手机号码" />
    <View
        android:layout_marginTop="188pt"
        android:layout_width="314pt"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:background="#c8c8c8"/>

    <ImageView
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_marginTop="200pt"
        android:layout_marginLeft="31pt"
        android:src="@mipmap/yzm" />

    <EditText
        android:id="@+id/login_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200pt"
        android:layout_marginLeft="77pt"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:hint="输入短信验证码" />

    <Button
        android:id="@+id/sms_btn"
        android:layout_width="wrap_content"
        android:layout_height="27pt"
        android:layout_marginTop="200pt"
        android:layout_marginLeft="200pt"
        android:layout_gravity="right"
        android:layout_marginRight="24pt"
        android:background="#ffd200"
        android:textColor="#ffffff"
        android:text="获取验证码" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="163pt"
        android:layout_height="33pt"
        android:layout_marginTop="245pt"
        android:layout_gravity="center_horizontal"
        android:background="#ffd200"
        android:textColor="#ffffff"
        android:text="登录" />
    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用常规登录方式"
        android:layout_marginTop="287pt"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffd200"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="142pt"
        android:text="其他登录方式"
        android:textColor="#999999"
        android:layout_marginTop="475pt"/>
    <ImageView
        android:id="@+id/login_qq"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30pt"
        android:layout_marginLeft="127pt"
        android:src="@mipmap/qq"/>
    <ImageView
        android:id="@+id/login_wx"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30pt"
        android:layout_marginLeft="197pt"
        android:src="@mipmap/wx"/>

</FrameLayout>