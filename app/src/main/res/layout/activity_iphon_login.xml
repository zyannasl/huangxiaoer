<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.IphonLogin">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:scaleType="fitXY"
        android:src="@mipmap/jianbian"/>

    <ImageView
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40pt"
        android:src="@mipmap/tubiao" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginTop="120pt"
        android:layout_marginLeft="30pt"
        android:src="@mipmap/user_icon" />

    <EditText
        android:id="@+id/ilogin_iphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122pt"
        android:layout_marginLeft="60pt"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:hint="请输入手机号码" />
    <View
        android:layout_marginTop="150pt"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8"/>

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginTop="160pt"
        android:layout_marginLeft="30pt"
        android:src="@mipmap/pass_icon" />

    <EditText
        android:id="@+id/ilogin_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162pt"
        android:layout_marginLeft="60pt"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:hint="输入登录密码" />

    <ImageView
        android:id="@+id/ilogin_pass"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginTop="160pt"
        android:layout_marginLeft="200pt"
        android:src="@mipmap/pass" />

    <Button
        android:id="@+id/ilogin_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200pt"
        android:layout_gravity="center_horizontal"
        android:background="#ffd200"
        android:textColor="#ffffff"
        android:text="登录" />
    <TextView
        android:id="@+id/ilogin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信验证码登录方式"
        android:layout_marginTop="235pt"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffd200"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="其他登录方式"
        android:textColor="#999999"
        android:layout_marginTop="450pt"/>
    <ImageView
        android:id="@+id/ilogin_qq"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginTop="480pt"
        android:layout_marginLeft="130pt"
        android:src="@mipmap/qq"/>
    <ImageView
        android:id="@+id/ilogin_wx"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginTop="480pt"
        android:layout_marginLeft="200pt"
        android:src="@mipmap/wx"/>

</FrameLayout>